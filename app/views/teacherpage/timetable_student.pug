doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title 学生列表
    link(rel="stylesheet" href="/styles/teacherstyles/timetable.css")
  body.teacher-background
    a(href="/teacher/timetable" class="back-button")
      img(src="/images/backbutton.png" alt="Back Button")
    .container
      h1 学生列表
      table
        thead
          tr
            th 学生ID
            th 学生姓名
        tbody
          if students && students.length > 0
            each student in students
              tr
                td= student.student_id
                td= student.student_name
          else
            tr
              td(colspan="2") 没有学生信息
    a(href="/teacher/edittimetable" class="edit-button")
        img(src="/images/editbutton.png" alt="Edit Timetable")
