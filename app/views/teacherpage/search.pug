doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title 学生详细信息搜索
    link(rel="stylesheet" href="/styles/teacherstyles/search.css")
  body.teacher-background
    a(href="/teacher/interface" class="back-button")
      img(src="/images/backbutton.png" alt="Back Button")
    .container
      h1 学生详细信息搜索
      form(action="/teacher/search" method="get")
        .search-box
          input(type="text" placeholder="搜索姓名、住址、症状、机构" name="query" id="searchInput")
          button(type="submit")
            img(src="/images/searchbutton.png" alt="Search Icon")
      .table-container
        if totalStudents > 0
          p 查询到的学生数量: #{totalStudents}
          table
            thead
              tr
                th 学生ID
                th 姓名
                th 出生日期
                th 性别
                th 症状
                th 城市
                th 区县
                th 详细地址
                th 家长姓名
                th 家长联系方式
                th 机构名称
            tbody
              each student in students
                tr 
                  td= student.Student_id
                  td= student.name
                  td= student.DOB
                  td= student.Gender
                  td= student.symptoms
                  td= student.Address_City
                  td= student.Address_District
                  td= student.Address_detail
                  td= student.Parents_name
                  td= student.Parents_Phonenumber
                  td= student.Institution_name
        else
          p 没有找到匹配的学生

